{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Backend of Musinda Kadhuwa portfolio website",
  "main": "index.js",
  "repository": "https://github.com/Jkadhuwa/portfolio-backend",
  "author": {
    "name": "Jkadhuwa",
    "email": "justinemsinda@gmail.com"
  },
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "start": "node ./build/index.js",
    "build-clean": "rm -d -fR ./build",
    "build": "babel -d build ./src -s",
    "dev": "export NODE_ENV=dev && nodemon --exec babel-node src/index.js",
    "lint": "eslint ./ --fix",
    "test": "jest --coverage --detectOpenHandles --verbose"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "mongoose": "^5.11.18",
     "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.8",
    "@babel/node": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.9",
    "@babel/preset-env": "^7.13.9",
    "@shelf/jest-mongodb": "^1.2.3",
    "babel-jest": "^26.6.3",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "lint-staged": "^10.5.4",
    "mongodb-memory-server": "^6.9.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": "yarn lint"
  },
  "jest": {
    "preset": "@shelf/jest-mongodb",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "src/config/logging.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/config/logging.js",
      "!src/index.js"
    ]
  }
}
